<!DOCTYPE html>
<html>
<head>
    @await Html.PartialAsync("_HeadPartial")
</head>
<body class="news-page">
    <header class="masthead">
        <div class="row">
            <div class="col-lg-6 col-md-6 p-20">
                <div class="post-heading">
                    <div class="right">
                        @await Html.PartialAsync("_LanguageTogglePartial")
                    </div>
                    <a class="news-link" href="/">@Localizer["Home"]</a>
                    <img class="renewal-logo-news" src="~/images/renewal-logo-white.png" data-at2x="~/images/renewal-logo-white@2x.png" width="190" />
                    <h1>Re:news</h1>
                    <h2 class="subheading">@Localizer["How your gifts are transforming lives in Shanghai"]</h2>
                    <div class="left"><h6>@Localizer["ISSUE 10"]</h6></div><div class="right"><h6>@Localizer["SPRING 2018"]</h6></div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 news issue-9">
                @*<img src="~/images/news/issue8/news-web-header.jpg" height="629px" width="100%" />*@
            </div>
        </div>
        <figcaption class="figure-caption caption news-caption chinese">@Localizer["Read how your gifts are changing lives in the New Year..."]</figcaption>
    </header>
    <article class="mb-5">
        @RenderBody()
    </article>
    @await Html.PartialAsync("_FooterPartial")
    @await Html.PartialAsync("_BootstrapScriptsPartial")
    @RenderSection("Scripts", required: false)
</body>
</html>
