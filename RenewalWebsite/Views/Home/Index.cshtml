@using RenewalWebsite.Services
@using RenewalWebsite.Resources
@inject ICurrencyService CurrencyService

@{
    ViewData["Title"] = DataAnnotations.Home;

    var currency = CurrencyService.GetCurrent();
    var language = CurrencyService.GetCurrentLanguage();

    decimal matchAmountCNY = 180000;
    decimal matchAmountUSD = 27500;
}

<div class="row">
    <div class="col-lg-6 offset-lg-0 offset-md-2 col-md-8 offset-sm-1">
        <img src="~/images/home/slide-laundry.jpg" class="figure-img img-fluid" alt="donate page image">
        @if (language.Name.Contains("zh"))
        {
            <figcaption class="figure-caption caption chinese">@DataAnnotations.RenewalCenterRelies</figcaption>
        }
        else
        {
            <figcaption class="figure-caption caption">@DataAnnotations.RenewalCenterRelies</figcaption>
        }
    </div>
    <div class="col-lg-6 offset-lg-0 offset-md-2 col-md-8 offset-sm-1">
        <h2>@DataAnnotations.SupportHelpsDisplacedPeople</h2>
        <p>@DataAnnotations.LivesOfHomelessPeopleShanghi</p>

        <h2 class="red-border">@DataAnnotations.GiftDouble</h2>
        <p>
            @DataAnnotations.ToHelpMeetTheUrgentNeed
        @if (currency.Name.Contains("zh"))
            {
            <span>@matchAmountCNY.ToString("C0", currency)@DataAnnotations.Dot</span>
        }
        else
        {
            <span>@matchAmountUSD.ToString("C0", currency)@DataAnnotations.Dot</span>
        }
    </p>

    <p>@DataAnnotations.AnyGiftYouSend</p>

    <div class="clearfix mt-4 mb-5">
        <a class="btn btn-secondary btn-block" asp-controller="Donate" asp-action="Campaign_2017_08">@DataAnnotations.DoubleMyGift <i class="arrow right-arrow"></i></a>
    </div>
</div>
</div>