@using Microsoft.AspNetCore.Identity
@using RenewalWebsite.Models
@using RenewalWebsite.Resources

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="ml-auto right">
        <ul class="navbar-nav ml-auto right">
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">@UserManager.GetUserName(User)</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="javascript:void(0);" onclick="Logout();" title="@DataAnnotations.LogOut">@DataAnnotations.LogOut</a>
                <button id="btnLogout" type="submit" class="btn btn-link navbar-btn navbar-link custom signin-margin hide">@DataAnnotations.LogOut</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav ml-auto right">
        <!--<li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Register">@DataAnnotations.Register</a>
        </li>-->
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Login">@DataAnnotations.Account</a>
        </li>
        @*<li class="nav-item">
            @await Html.PartialAsync("_LanguageTogglePartial")
        </li>*@
    </ul>
}
<script type="text/javascript">
    function Logout() {
        $('#btnLogout').trigger("click");
    }
</script>