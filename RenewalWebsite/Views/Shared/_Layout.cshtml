@using System.Globalization
@using Microsoft.AspNetCore.Identity
@using RenewalWebsite.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html>
<head>
    @await Html.PartialAsync("_HeadPartial")
</head>
<body>
    <div id="loader-wrapper">
        <div id="loader"></div>
        <div class="loader-section section-left"></div>
        <div class="loader-section section-right"></div>
    </div>
    <nav class="navbar navbar-toggleable-md navbar-light" id="mainNav">
        <div class="container">
            <a class="navbar-brand hide-large red" href="/">@Localizer["RENEWAL"]</a>
            <div class="form-horizontal">
                <div class="form-group row">
                    <div class="navbar-toggler navbar-toggler-right">
                        <div class="input-group">
                            @*@if (!SignInManager.IsSignedIn(User))
                                {*@
                            <div class="langBig input-group-btn mtp-auto">
                                @await Html.PartialAsync("_LanguageTogglePartial")
                            </div>
                            @*}*@
                            <button class="navbar-toggler input-group-btn" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                                <i class="fa fa-bars"></i>
                            </button>
                        </div>
                    </div>

                </div>
            </div>
            <a class="navbar-brand hide-small" href="/"><img src="~/images/renewal-logo.png" data-at2x="~/images/renewal-logo@2x.png" width="100" /></a>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav left">
                    <li class="nav-item">
                        <a class="nav-link" href="/">@Localizer["Home"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Services">@Localizer["Services"]</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="News" asp-action="Index">@Localizer["News"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Donate" asp-action="Index">@Localizer["Donate"]</a>
                    </li>
                </ul>
                @await Html.PartialAsync("_LoginPartial")
            </div>
            @if (!SignInManager.IsSignedIn(User))
            {
                <div class="lang" style="margin-top:0px;">
                    @await Html.PartialAsync("_LanguageTogglePartial")
                </div>
            }
            else
            {
                <div class="lang">
                    @await Html.PartialAsync("_LanguageTogglePartial")
                </div>
            }
        </div>
    </nav>
    <div class="container pad-top">
        @RenderBody()
    </div>
    @await Html.PartialAsync("_FooterPartial")
    @await Html.PartialAsync("_BootstrapScriptsPartial")
    <script>
        window.globalSetting = {};
        window.globalSetting.lang = '@CultureInfo.CurrentCulture.Name';
    </script>

    <script type="text/javascript">
        var _dcq = _dcq || [];
        var _dcs = _dcs || {};
        _dcs.account = '7811515';

        (function () {
            var dc = document.createElement('script');
            dc.type = 'text/javascript'; dc.async = true;
            dc.src = '//tag.getdrip.com/7811515.js';
            var s = document.getElementsByTagName('script')[0];
        })();

        $(document).ready(function () {
            if (document.readyState == "complete") {
                StopProgress();
            }

            $(document).ajaxStart(function () {
                try {
                    ShowSendingProgress();
                    //run_waitMe('win8');
                } catch (e) {
                }
            });

            $(document).ajaxStop(function () {
                try {
                    StopProgress();
                    //$('.loader-class').waitMe('hide');
                } catch (e) {
                    //$(".waitMe").remove();
                }
            });

            $(document).ajaxError(function () {
                try {
                    StopProgress();
                    //$('.loader-class').waitMe('hide');
                } catch (e) {
                    //$(".waitMe").remove();
                }
            });

            $(document).ajaxComplete(function () {
                try {
                    StopProgress();
                    //$('.loader-class').waitMe('hide');
                } catch (e) {
                    //$(".waitMe").remove();
                }
            });

            function ShowSendingProgress() {
                $('#loader-wrapper').show();
            }

            function StopProgress() {
                $('#loader-wrapper').hide();
            }
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
