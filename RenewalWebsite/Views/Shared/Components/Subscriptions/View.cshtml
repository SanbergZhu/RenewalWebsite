@model RenewalWebsite.Models.CustomerPaymentViewModel

<div class="col-lg-12" style="margin-top:15px;">

    @if (Model.Subscriptions == null || !Model.Subscriptions.Any())
    {
        <h2>There are no subscriptions for now</h2>
    }
    else
    {

        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <td>Subscription Name</td>
                    <td>Currency</td>
                    <td>Amount</td>
                    <td>Status</td>
                    <td>Action</td>
                </tr>
            </thead>

            <tbody>
                @foreach (var subscription in Model.Subscriptions)
                {
                    <tr>
                        <td>@subscription.Name</td>
                        <td>@subscription.Currency</td>
                        <td>@(subscription.Amount / 100)</td>
                        <td>@subscription.Status</td>
                        <td><a href="javascript:void(0);" class="btn btn-primary" data-ajax-value="@subscription.Id" onclick="deleteSubscription(this);">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
<a asp-action="Index" asp-controller="Home" class="btn btn-default">Add New Subscription</a>
<script type="text/javascript">
    function deleteSubscription(item) {
        var result = confirm("Want to delete?");
        if (result) {
            //Logic to delete the item
            var id = $(item).attr("data-ajax-value");
            window.location = "/Subscription/Delete?subscriptionId=" + id;
        }
        else {
            return;
        }
    };
</script>