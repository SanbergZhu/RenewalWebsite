@model RenewalWebsite.Models.CustomerPaymentViewModel

<div class="col-lg-12" style="margin-top:15px;">

    @if (Model.Subscriptions == null || !Model.Subscriptions.Any())
    {
        <h2>There are no subscriptions for now</h2>
    }
    else
    {

        <table class="table table-hover table-responsive" width="100%">
            <thead>
                <tr>
                    <th>Subscription Name</th>
                    <th>Currency</th>
                    <th>Amount (USD)</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var subscription in Model.Subscriptions)
                {
                    <tr>
                        <td style="vertical-align:middle;">@subscription.Name</td>
                        <td style="vertical-align:middle;">@subscription.Currency</td>
                        <td style="vertical-align:middle;" class="text-right">@Math.Round((subscription.Amount / 100),2)</td>
                        <td style="vertical-align:middle;">@subscription.Status</td>
                        <td style="vertical-align:middle;"><a href="javascript:void(0);" class="btn btn-primary" data-ajax-value="@subscription.Id" onclick="deleteSubscription(this);">Cancel</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
<a asp-action="Index" asp-controller="Donate" class="btn btn-default">Add New Subscription</a>
<script type="text/javascript">
    function deleteSubscription(item) {
        var result = confirm("Are you sure you want to cancel?");
        if (result) {
            //Logic to delete the item
            var id = $(item).attr("data-ajax-value");
            window.location = "/Subscription/Delete?subscriptionId=" + id;
        }
        else {
            return;
        }
    };
</script>