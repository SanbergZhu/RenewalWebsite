@using System.Globalization
@using RenewalWebsite.Services
@using Microsoft.AspNetCore.Mvc.Localization
@model DonationViewModel

@inject IViewLocalizer Localizer
@inject ICurrencyService CurrencyService

@{
    ViewData["Title"] = Localizer["Donate"];
    var currency = CurrencyService.GetCurrent();
    var language = CurrencyService.GetCurrentLanguage();
    double baseAmountCNY = 149;
    double baseAmountUSD = 22.5;
}

<div class="row">

    @if (ViewBag.Browser.Contains("MicroMessenger"))
    {
        if (ViewBag.Browser.Contains("Mac OS X"))
        {
            <div class="col-md-12">
                <h2>@Localizer["Please open this page in your browser."]</h2>
                <p>@Localizer["Our site isn't compatible with WeChat. To continue, please select 'Open in Safari' from the context menu (three dots) at the top of your screen."]</p>
            </div>
        }
        else
        {
            <div class="col-md-12">
                <h2>@Localizer["Please open this page in your browser."]</h2>
                <p>@Localizer["Our site isn't compatible with WeChat. To continue, please select 'Open with Browser' from the context menu (three dots) at the top of your screen."]</p>
            </div>
        }
    }
    else
    {
        <div class="col-lg-6 offset-lg-0 offset-md-2 col-md-8 offset-sm-1">
            <img src="~/images/campaigns/slide-matching.jpg" class="figure-img img-fluid" alt="donate page image">
            <figcaption class="figure-caption caption chinese">
                @Localizer["Buy a winter coat, shoes, socks and thermal underwear for a homeless person this winter for"]
                @if (currency.Name.Contains("zh"))
                {
                    <span>@baseAmountCNY.ToString("C", currency)</span>@Localizer["."]
                }
                else
                {
                    <span>@baseAmountUSD.ToString("C", currency)</span>@Localizer["."]
                }

            </figcaption>
        </div>

        <div class="col-lg-6 offset-lg-0 offset-md-2 col-md-8 offset-sm-1">
            <h2>@Localizer["Use my gift for winter coats and warm clothes."]</h2>
            <p>@Localizer["Yes, I want to help homeless men and women in Shanghai stay warm, dry, and healthy this winter by providing them with critically needed winter clothes."]</p>

            @if (currency.Name.Contains("en"))
            {
                <form asp-controller="Donate" asp-action="CreateCampaign">

                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div id="textMainMessage" class="text-danger" style="display:none;">
                        <ul>
                            <li id="textMainErrorMessage"></li>
                        </ul>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <label class="mtp-auto">@Localizer["I would like to make a"]&nbsp;</label>
                            <select asp-for="CycleId" class="form-control select-font" style="min-width:100px; max-width:100px;border-radius:0.25rem;"
                                    asp-items="@Model.DonationCycles"></select>&nbsp;

                            <label class="mtp-auto">@Localizer["gift of:"]</label>
                        </div>
                    </div>

                    <input type="hidden" id="Reason" name="Reason" />
                    <input type="hidden" id="IsCustom" name="IsCustom" />
                    <input type="hidden" id="DonationAmount" name="DonationAmount" />
                    <ul class="list-unstyled rmb-options mb-5">
                        <li> <input id="SelectedAmount" name="SelectedAmount" type="radio" value="1" data-value="false" checked="checked" data-donation-value="22.50" data-reason="to provide a winter coat, shoes, socks and thermal underwear for a homeless person." /><strong>@CurrencyService.GetSymbol(currency)22.50</strong> @Localizer["to provide a winter coat, shoes, socks and thermal underwear for a homeless person."]</li>
                        <li> <input id="SelectedAmount" name="SelectedAmount" type="radio" value="2" data-value="false" data-donation-value="67.50" data-reason="to provide essential winter clothing for three people." /><strong>@CurrencyService.GetSymbol(currency)67.50</strong> @Localizer["to provide essential winter clothing for three people."]</li>
                        <li> <input id="SelectedAmount" name="SelectedAmount" type="radio" value="3" data-value="false" data-donation-value="135.00" data-reason="to provide essential winter clothing for six people." /><strong>@CurrencyService.GetSymbol(currency)135.00</strong> @Localizer["to provide essential winter clothing for six people."]</li>
                        <li>
                            <input id="SelectedAmount" name="SelectedAmount" type="radio" value="4" class="rb-align" data-value="true" data-reason="to help has many people as I can stay warm this winter!" onclick="setFocus(this)" /><strong>@CurrencyService.GetSymbol(currency)</strong>
                            <input type="text" id="CustomAmount" name="CustomAmount" onfocus="checkSelection()" class="form-control" /> @Localizer["to help has many people as I can stay warm this winter!"]
                        </li>
                    </ul>
                    <div class="clearfix mt-3 mb-3">
                        <button id="btnSave" class="btn btn-secondary" type="button" onclick="checkAmount();">@Localizer["DONATE WITH CREDIT OR DEBIT CARD NOW"]&nbsp;<i class="arrow right-arrow"></i></button>
                        <button id="btnSaveFinal" class="btn btn-secondary hide" type="submit">@Localizer["DONATE WITH CREDIT OR DEBIT CARD NOW"]&nbsp;<i class="arrow right-arrow"></i></button>
                    </div>
                    <p>@await Html.PartialAsync("_CurrencyTogglePartial")</p>
                </form>
            }
            else
            {
                <ul class="list-unstyled gift-options">
                    <li><strong>@CurrencyService.GetSymbol(currency)149</strong> @Localizer["to provide a winter coat, shoes, socks and thermal underwear for a homeless person."]</li>
                    <li><strong>@CurrencyService.GetSymbol(currency)447</strong> @Localizer["to provide a winter coat, shoes, socks and thermal underwear for a homeless person."]</li>
                    <li><strong>@CurrencyService.GetSymbol(currency)894</strong> @Localizer["to provide a winter coat, shoes, socks and thermal underwear for a homeless person."]</li>
                    <li>@Localizer["Your most generous possible gift of any amount will be doubled."]</li>
                </ul>
                <div class="clearfix mt-3 mb-3">
                    <a class="btn btn-secondary" target="_blank" href="https://qr.alipay.com/apr23wsb7xjd8usf04">@Localizer["OPEN ALIPAY APP AND DONATE NOW"] <i class="arrow right-arrow"></i></a>
                </div>
                <p class="m-tb-15">@Localizer["Or scan the QR code below with your Alipay app to donate now:"]</p>
                <img src="~/images/zhifubao.jpg" width="125" />
                <p class="m-tb-15">@await Html.PartialAsync("_CurrencyTogglePartial")</p>
            }
        </div>
    }
</div>
<script type="text/javascript">
    function checkAmount() {
        debugger;
        var item = $('input[name=SelectedAmount]:checked').val();
        if (item == "4") {
            if ($('#CustomAmount').val() == "") {
                $('#textMainMessage').show();
                $('#textMainErrorMessage').text('Amount is required.');
                $('#CustomAmount').focus();
                return;
            }

            $('#DonationAmount').val($('#CustomAmount').val());
        }
        else {
            var value = $('input[name=SelectedAmount]:checked').data('donation-value');
            $('#DonationAmount').val(value);
        }

        var reason = $('input[name=SelectedAmount]:checked').data('reason');
        $('#Reason').val(reason);

        var iscustom = $('input[name=SelectedAmount]:checked').data('value');
        $('#IsCustom').val(iscustom);

        $('#textMainMessage').hide();
        $('#textMainErrorMessage').text('');
        $("#btnSaveFinal").trigger("click");
    };

    function setFocus(item) {
        $('#CustomAmount').focus();
    };

    function checkSelection() {
        $('[data-value=true]').prop('checked', true);
    };
</script>