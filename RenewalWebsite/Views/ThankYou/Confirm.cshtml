@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Subscribe"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@Localizer["Thank you for subscribing!"]</h2>
<p>@Localizer["You'll be hearing from us soon!"]</p>
<div class="row" style="margin-top:20px;">
    <div class="col-md-12">
        <a href="/home/index" class="btn btn-secondary btn-block">@Localizer["Home"] <i class="arrow right-arrow"></i></a>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        setTimeout(function () {
            window.location.href = "/home/index";
        }, 10000);
    });
</script>