@using RenewalWebsite.Services
@inject ICurrencyService CurrencyService
@{
    ViewData["Title"] = "Preference";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    string email = ViewBag.email;
    string lang = CurrencyService.GetCurrentLanguage().TwoLetterISOLanguageName;
}


<div class="container">
    <h2>Update Renewal communication preferences</h2>
</div>

<div class="container">
    <form>
        <fieldset>
            <div class="form-group row">
                <div class="col-md-12">
                    <input type="radio" id="rbChinese" name="language" value="zh" /> Chinese
                    <input type="radio" id="rbEnglish" name="language" value="en" /> English
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-12">
                    <button type="button" id="btnChangeCommunication" class="btn btn-secondary" onclick="changePreference()">Change email communications to English/Chinese</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var lang = "@lang";
        $("input[name=language][value=" + lang + "]").attr('checked', 'checked');
    });

    function changePreference() {
        var selValue = $('input[name=language]:checked').val();
        $.ajax({
            url: "/Contact/ChangePreference",
            data: {
                "email": "@email",
                "language" :selValue
            },
            type: "post",
            datatype: "application/json",
            success: function (result) {
                if (result.status = "1") {
                    $('#message').show();
                    $('#message').text(result.data);
                    setInterval(function () {
                        window.location.href = "/contact/thankyou?id=2";
                    }, 1000);
                }
            }
        });
    };
</script>