@model CompletedViewModel
@using RenewalWebsite.Resources

@inject IViewLocalizer Localizer
@{
    ViewBag.Title = DataAnnotations.ThankYou;
}
@*<div>
        <h3>@Model.Message</h3>
    </div>*@


<div class="row">
    <div class="col-lg-6 offset-lg-0 offset-md-2 col-md-8 offset-sm-1">
        <img src="~/images/home/slide-eating.jpg" class="figure-img img-fluid" alt="donate page image">
        <figcaption class="figure-caption caption">@DataAnnotations.ThanksContent</figcaption>
    </div>
    <div class="col-lg-6 offset-lg-0 offset-md-2 col-md-8 offset-sm-1">
        <h2>@DataAnnotations.ThankYou!</h2>
        @*<p>Your card was charged successfully. Thank you for your kind gift of $100.</p>*@
        @if (Model.HasSubscriptions)
        {
            <p>@Model.Message</p>
            @*<p>[For subscriptions only:]</p>
                <p>Your gift will repeat [monthly | quarterly | yearly]. To manage or cancel your subscription anytime, follow the link below.</p>*@
            <a asp-controller="Manage" asp-action="Index" class="styled-link">@DataAnnotations.SeeMySubscriptions</a>
        }
        else
        {
            <p>@Model.Message</p>
        }
    </div>
</div>
