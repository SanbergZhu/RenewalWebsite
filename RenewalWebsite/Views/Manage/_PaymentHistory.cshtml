    function GeneratePDF(type) {
        $("#idOfMessage").hide();
        $("#idOfErrorMessage").hide();
        $.ajax({
            url: "/Manage/CheckHistoryAvailable",
            data: {
                typeOfHistory: type
            },
            type: 'POST',
            success: function (data) {
                if (data == true) {
                    $("#typeOfHistory").val(type);
                    $('#btnPDF').trigger('click');
                }
                else {
                    $("#idOfMessage").show();
                }
            },
            error: function () {
                $("#idOfErrorMessage").show();
            }
        });
    };

