@model IndexViewModel
@{
    ViewData["Title"] = Localizer["Your account"];
}
<link href="~/css/jquery.scrolling-tabs.css" rel="stylesheet" />

<h2><i class="fa fa-user fa-2x"></i> @ViewData["Title"]</h2>
